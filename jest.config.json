{
  "maxConcurrency": 1,
  "moduleFileExtensions": ["js", "ts"],
  "collectCoverage": true,
  "collectCoverageFrom": ["src/**/*.ts", "!src/**/*.{contract,d}.ts"],
  "preset": "ts-jest",
  "roots": ["<rootDir>/src"],
  "testMatch": ["<rootDir>/src/**/*.test.ts"],
  "testEnvironment": "node",
  "moduleNameMapper": {
    "^src/(.*)$": "<rootDir>/src/$1"
  },
  "testPathIgnorePatterns": ["/node_modules/"]
}
