{
  "compilerOptions": {
    "allowSyntheticDefaultImports": true,
    "baseUrl": "./",
    "declaration": false,
    "emitDecoratorMetadata": true,
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "inlineSourceMap": true,
    "inlineSources": true,
    "lib": ["dom", "esnext"],
    "module": "commonjs",
    "moduleResolution": "node",
    "noImplicitAny": false,
    "noLib": false,
    "outDir": "./dist",
    "paths": {
      "*": ["./node_modules/*"],
      "src/*": ["./src/*"]
    },
    "removeComments": false,
    "strict": true,
    "strictPropertyInitialization": false,
    "suppressImplicitAnyIndexErrors": true,
    "target": "ESNext"
  },
  "exclude": ["./node_modules", "./dist", "./.idea", "./.semaphore", "./resource"],
  "include": ["./src/**/*.ts", "node_modules/@types/shelljs/make.d.ts"]
}
